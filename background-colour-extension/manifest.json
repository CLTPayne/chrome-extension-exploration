{
    "name": "Background Colour Picker",
    "version": "1.0",
    "description": "User selects a background colour for a browser window",
    "manifest_version": 2,
    "permissions": ["storage"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "page_action": {
        "default_popup": "popup.html"
    } 
}